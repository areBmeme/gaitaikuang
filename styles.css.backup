/* 产品展示样式 */
.product-showcase {
    background: linear-gradient(135deg, #f8fffe, #f1f9f7);
    border-radius: 20px;
    padding: 2rem;
    box-shadow: 0 8px 30px rgba(16, 185, 129, 0.15);
    border: 1px solid rgba(16, 185, 129, 0.1);
}

.product-categories {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.category-btn {
    background: white;
    border: 2px solid rgba(16, 185, 129, 0.2);
    border-radius: 25px;
    padding: 0.8rem 1.5rem;
    font-size: 0.95rem;
    font-weight: 600;
    color: #4b5563;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.category-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #10b981, #059669);
    transition: left 0.3s ease;
    z-index: 1;
}

.category-btn span {
    position: relative;
    z-index: 2;
}

.category-btn:hover {
    border-color: #10b981;
    color: #059669;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(16, 185, 129, 0.2);
}

.category-btn.active {
    background: linear-gradient(135deg, #10b981, #059669);
    border-color: #10b981;
    color: white !important;
    box-shadow: 0 5px 20px rgba(16, 185, 129, 0.3);
    position: relative;
    z-index: 2;
}

.category-btn.active::before {
    left: 0;
}

.category-btn.active span {
    color: white !important;
    position: relative;
    z-index: 3;
}

.product-gallery {
    position: relative;
}

.gallery-container {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}

.product-slider {
    position: relative;
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(16, 185, 129, 0.2);
}

.product-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transform: translateX(100%);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
}

.product-slide.active {
    opacity: 1;
    transform: translateX(0);
    z-index: 2;
}

.product-slide.prev {
    transform: translateX(-100%);
}

.product-slide.next {
    transform: translateX(100%);
}

.product-card {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    transition: all 0.4s ease;
}

.main-card {
    box-shadow: 0 15px 40px rgba(16, 185, 129, 0.15);
    border: 2px solid rgba(16, 185, 129, 0.1);
}

.main-card:hover {
    transform: scale(1.02);
    box-shadow: 0 20px 50px rgba(16, 185, 129, 0.25);
}

.product-image {
    width: 100%;
    height: 70%;
    object-fit: cover;
    transition: all 0.4s ease;
}

.product-card:hover .product-image {
    transform: scale(1.05);
}

.product-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(255, 255, 255, 0.98), rgba(255, 255, 255, 0.9));
    backdrop-filter: blur(10px);
    padding: 1.5rem;
    transform: translateY(0);
    transition: all 0.4s ease;
}

.product-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #1f2937, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.product-desc {
    color: #6b7280;
    line-height: 1.5;
    font-size: 0.95rem;
    margin: 0;
}

.gallery-controls {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 1rem;
    pointer-events: none;
    z-index: 3;
}

.control-btn {
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(16, 185, 129, 0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    pointer-events: auto;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.1);
}

.control-btn:hover {
    background: rgba(16, 185, 129, 0.9);
    border-color: #10b981;
    transform: scale(1.1);
    box-shadow: 0 6px 20px rgba(16, 185, 129, 0.3);
}

.control-btn:hover .arrow-icon {
    color: white;
}

.arrow-icon {
    font-size: 1.5rem;
    font-weight: bold;
    color: #059669;
    transition: color 0.3s ease;
}

.gallery-indicators {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 3;
}

.indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid rgba(16, 185, 129, 0.3);
}

.indicator.active {
    background: #10b981;
    border-color: #10b981;
    transform: scale(1.2);
}

.indicator:hover:not(.active) {
    background: rgba(16, 185, 129, 0.6);
    transform: scale(1.1);
}

