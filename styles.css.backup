.member-title {
    font-size: 1.2rem;
    font-weight: 600;
    color: #059669;
    margin-bottom: 0.5rem;
}

.member-desc {
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
}

/* 生产基地样式 */
.production-bases {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin: 2rem 0;
}

.base-card {
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(16, 185, 129, 0.15);
    border: 1px solid rgba(16, 185, 129, 0.1);
    transition: all 0.3s ease;
}

.base-card:hover {
    border-color: rgba(16, 185, 129, 0.3);
    box-shadow: 0 12px 40px rgba(16, 185, 129, 0.25);
    transform: translateY(-5px);
}

.base-image {
    position: relative;
    width: 100%;
    height: 250px;
    overflow: hidden;
}

.base-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
}

.base-card:hover .base-photo {
    transform: scale(1.05);
}

.base-info {
    padding: 1.5rem;
}

.base-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #1f2937, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.base-desc {
    color: #6b7280;
    line-height: 1.6;
    margin: 0;
}

/* 在建生产基地样式 */
.construction-projects {
    margin: 2rem 0;
}

.project-card {
    background: white;
    border-radius: 15px;
    margin-bottom: 1rem;
    box-shadow: 0 4px 20px rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
}

.project-card:last-child {
    margin-bottom: 0;
}

.project-card.active {
    border-color: #10b981;
    box-shadow: 0 8px 30px rgba(16, 185, 129, 0.2);
}

.project-header {
    display: flex;
    align-items: center;
    padding: 1.5rem 2rem;
    cursor: pointer;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.02), rgba(5, 150, 105, 0.02));
    position: relative;
}

.project-header:hover {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.05), rgba(5, 150, 105, 0.05));
}

.project-number {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    margin-right: 1.5rem;
    box-shadow: 0 4px 15px rgba(16, 185, 129, 0.3);
}

.project-title {
    flex: 1;
    font-size: 1.4rem;
    font-weight: 700;
    color: #1f2937;
    margin: 0;
    background: linear-gradient(135deg, #1f2937, #059669);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.project-toggle {
    width: 40px;
    height: 40px;
    background: rgba(16, 185, 129, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.project-card.active .project-toggle {
    background: #10b981;
    transform: rotate(45deg);
}

.toggle-icon {
    font-size: 1.5rem;
    font-weight: bold;
    color: #059669;
    transition: all 0.3s ease;
}

.project-card.active .toggle-icon {
    color: white;
}

.project-content {
    max-height: 0;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    background: white;
}

.project-card.active .project-content {
    max-height: 500px;
    padding: 0 2rem 2rem;
}

.project-overview {
    margin-bottom: 1.5rem;
}

.overview-item {
    display: flex;
    align-items: center;
    margin-bottom: 0.8rem;
    padding: 0.8rem;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.02), rgba(5, 150, 105, 0.02));
    border-radius: 8px;
    border-left: 3px solid #10b981;
}

.overview-item:last-child {
    margin-bottom: 0;
}

.overview-item .label {
    font-weight: 600;
    color: #4b5563;
    min-width: 100px;
}

.overview-item .value {
    color: #6b7280;
    flex: 1;
}

.overview-item .value.highlight {
    color: #10b981;
    font-weight: 700;
    font-size: 1.1rem;
}

.project-details h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: #059669;
    margin-bottom: 0.8rem;
    margin-top: 1rem;
}

.project-details ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.project-details li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: #6b7280;
    line-height: 1.5;
}

.project-details li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: #10b981;
    font-weight: bold;
    font-size: 1.2rem;
}

/* 关于我们页面响应式设计 - 平板 */
@media (max-width: 768px) {
    .about-section {
        margin: 2rem 0;
    }
    
    /* 团队信息 - 平板适配 */
    .team-info {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .team-card {
        padding: 1.5rem;
        border-radius: 15px;
    }
    
    .team-icon {
        width: 50px;
        height: 50px;
        font-size: 1.8rem;
    }
    
    .team-title {
        font-size: 1.3rem;
    }
    
    .team-stats {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.8rem;
    }
    
    .team-stats .stat-item {
        padding: 0.8rem;
    }
    
    .team-stats .stat-number {
        font-size: 1.3rem;
    }
    
    .team-stats .stat-label {
        font-size: 0.85rem;
    }
    
    .member-title {
        font-size: 1.1rem;
    }
    
    /* 生产基地 - 平板适配 */
    .production-bases {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .base-image {
        height: 200px;
    }
    
    .base-info {
        padding: 1.2rem;
    }
    
    .base-title {
        font-size: 1.2rem;
    }
    
    /* 在建生产基地 - 平板适配 */
    .project-header {
        padding: 1.2rem 1.5rem;
    }
    
    .project-number {
        width: 45px;
        height: 45px;
        font-size: 1.1rem;
        margin-right: 1rem;
    }
    
    .project-title {
        font-size: 1.3rem;
    }
    
    .project-toggle {
        width: 35px;
        height: 35px;
    }
    
    .toggle-icon {
        font-size: 1.3rem;
    }
    
    .project-card.active .project-content {
        padding: 0 1.5rem 1.5rem;
    }
    
    .overview-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.3rem;
        padding: 0.6rem;
    }
    
    .overview-item .label {
        min-width: auto;
        font-size: 0.9rem;
    }
    
    .overview-item .value.highlight {
        font-size: 1rem;
    }
}

/* 关于我们页面响应式设计 - 手机 */
@media (max-width: 480px) {
    .about-section {
        margin: 1.5rem 0;
    }
    
    .section-title {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
    }
    
    /* 团队信息 - 手机适配 */
    .team-card {
        padding: 1.2rem;
        border-radius: 12px;
    }
    
    .team-header {
        gap: 0.8rem;
        margin-bottom: 1rem;
    }
    
    .team-icon {
        width: 45px;
        height: 45px;
        font-size: 1.5rem;
    }
    
    .team-title {
        font-size: 1.2rem;
    }
    
    .team-content p {
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    
    .team-stats {
        grid-template-columns: 1fr;
        gap: 0.6rem;
    }
    
    .team-stats .stat-item {
        padding: 0.6rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-align: left;
    }
    
    .team-stats .stat-number {
        font-size: 1.2rem;
        margin-bottom: 0;
    }
    
    .team-stats .stat-label {
        font-size: 0.8rem;
    }
    
    .member-title {
        font-size: 1rem;
        margin-bottom: 0.3rem;
    }
    
    .member-desc {
        font-size: 0.85rem;
    }
    
    /* 生产基地 - 手机适配 */
    .base-image {
        height: 180px;
    }
    
    .base-info {
        padding: 1rem;
    }
    
    .base-title {
        font-size: 1.1rem;
        margin-bottom: 0.3rem;
    }
    
    .base-desc {
        font-size: 0.85rem;
    }
    
    .base-card:hover {
        transform: none;
    }
    
    .base-card:hover .base-photo {
        transform: none;
    }
    
    /* 在建生产基地 - 手机适配 */
    .project-header {
        padding: 1rem;
        flex-wrap: wrap;
        gap: 0.8rem;
    }
    
    .project-number {
        width: 40px;
        height: 40px;
        font-size: 1rem;
        margin-right: 0;
    }
    
    .project-title {
        font-size: 1.1rem;
        flex: none;
        order: 2;
        width: 100%;
    }
    
    .project-toggle {
        width: 30px;
        height: 30px;
        order: 3;
        margin-left: auto;
    }
    
    .toggle-icon {
        font-size: 1.2rem;
    }
    
    .project-card.active .project-content {
        padding: 0 1rem 1rem;
        max-height: 600px;
    }
    
    .overview-item {
        padding: 0.5rem;
        gap: 0.2rem;
    }
    
    .overview-item .label {
        font-size: 0.85rem;
    }
    
    .overview-item .value {
        font-size: 0.85rem;
    }
    
    .overview-item .value.highlight {
        font-size: 0.95rem;
    }
    
    .project-details h4 {
        font-size: 1rem;
        margin-top: 0.8rem;
        margin-bottom: 0.6rem;
    }
    
    .project-details li {
        font-size: 0.85rem;
        margin-bottom: 0.3rem;
        line-height: 1.4;
    }
}
